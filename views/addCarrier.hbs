<div class="shipInfo"></div>
<form method="POST" action="/space/addShip/carrier">
<div class="nameHeader">
  <label>Name</label>
  <input type="text" name="name" />
</div>
<div>
  <select name="armor" class="baseImage">
      <option value="Cruiser Hull" >Cruiser Hull</option>
      <option value="Stealth Coating" >Stealth Coating</option>
      <option value="Composite Plating" >Composite Plating</option>
  </select>
</div>
<div>
  <label>Armarments</label>
  <select name="weapons">
    <option value="Rail Gun">Rail Gun</option>
    <option value="Flak Cannon">Flak Cannon</option>
    <option value="Torpedo Volley">Torpedo Volley</option>
  </select>
</div>
<div class="refitBtn">
  <input type="submit" value="Add Carrier" />
</div>
  <input type="text" name="image" value="CruiserHull" class="image" hidden="true"/>
</form>
<div class="shipImgHolder">
    <img src="/images/CruiserHull.png" alt="carrierImage" class="shipImg">
</div>
</div>